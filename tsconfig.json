{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "outDir": "lib"
  },
  "include": ["src", "standalone", "app", "main.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
